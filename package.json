{
  "name": "flower",
  "private": true,
  "repository": "https://github.com/AkashAryal/Flower.git",
  "workspaces": [
    "client",
    "server"
  ],
  "license": "MIT",
  "scripts": {
    "format": "prettier --write '**/*.{ts,js,tsx,jsx,scss,css,html,md}'",
    "format:check": "prettier --check '**/*.{ts,js,tsx,jsx,scss,css,html,md}'",
    "lint": "eslint . --cache",
    "compile": "yarn workspaces run compile"
  },
  "devDependencies": {
    "@dev-sam/eslint-config-common": "^0.17.0",
    "@types/node": "^14.11.1",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  },
  "eslintConfig": {
    "extends": [
      "@dev-sam/common"
    ],
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "rules": {}
      }
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf",
    "proseWrap": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "NODE_NO_WARNINGS=1 lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx,scss,css,html,md}": [
      "yarn prettier --write"
    ]
  }
}
